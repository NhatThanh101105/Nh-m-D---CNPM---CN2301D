@model List<KoiFish> // Đảm bảo bạn đã chỉ định model cho View

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        /* Background blur effect */
        body {
            background-image: url('@Url.Content("~/images/background/background-koi.jpg")');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            color: #fff;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            font-family: Arial, sans-serif;
        }

        /* Overlay effect to blur the background */
        .background-blur {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(8px);
            z-index: -1;
        }

        /* Fish tank styling */
        .fish-tank {
            position: relative;
            width: 60%;
            height: 300px;
            margin: 40px auto;
            border: 5px solid #1E90FF;
            border-radius: 15px;
            overflow: hidden;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .fish {
            position: absolute;
            width: 60px;
            transition: transform 1s linear;
        }
    </style>
</head>
<body>
    <div class="background-blur"></div>

    <!-- Fish Tank Display -->
    <div id="fishTank" class="fish-tank">
        @if (Model != null && Model.Any()) // Kiểm tra nếu danh sách cá không rỗng
        {
            foreach (var fish in Model) // Lặp qua danh sách cá
            {
                <img class="fish" src="@Url.Content(fish.ImageURL)" alt="@fish.KoiName" />
            }
        }
        else
        {
            <p>Không có cá koi nào để hiển thị.</p>
            // Thông báo nếu không có cá
        }
    </div>

    <script>
        function startAnimation() {
            const fishElements = document.querySelectorAll(".fish");

            function randomPosition(fish) {
                const tank = document.getElementById("fishTank");
                const x = Math.random() * (tank.clientWidth - fish.clientWidth); // Adjust width for fish size
                const y = Math.random() * (tank.clientHeight - fish.clientHeight); // Adjust height for fish size
                return { x, y };
            }

            function moveFish(fish) {
                const pos = randomPosition(fish);
                fish.style.transform = `translate(${pos.x}px, ${pos.y}px)`;
            }

            setInterval(() => {
                fishElements.forEach(moveFish);
            }, 1000); // Move every second
        }

        // Start fish animation on page load
        window.onload = startAnimation;
    </script>
</body>
</html>
