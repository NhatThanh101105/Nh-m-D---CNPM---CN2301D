@{
    ViewBag.Title = "Koi Breeding Games";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/koi-game-style.css" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            background-image: url('@Url.Content("~/images/background-koi.jpg")');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
            color: #fff;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .background-container {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 100vh;
        }

        .title {
            font-size: 60px;
            color: #1E90FF;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            margin-bottom: 20px;
            font-family: 'Arial', sans-serif;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .top-right-corner {
            position: absolute;
            top: 10px;
            right: 10px;
            display: flex;
            gap: 10px;
        }

        .username-display {
            font-size: 16px;
            color: #fff;
            margin-right: 10px;
        }

        .button {
            background-color: #FFD700; /* Nền vàng cho cả hai nút */
            color: #000; /* Chữ màu đen để nổi bật */
            border: none; /* Bỏ viền */
            padding: 10px 15px; /* Padding cho nút */
            border-radius: 5px; /* Bo tròn góc nút */
            cursor: pointer; /* Con trỏ chuột khi di chuột qua */
            font-size: 16px; /* Kích thước chữ */
            font-weight: bold; /* Chữ đậm */
            text-decoration: none; /* Bỏ gạch chân */
            transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển màu nền và chữ khi hover */
        }

            .button:hover {
                background-color: #FFC300; /* Màu nền khi hover */
                color: #fff; /* Màu chữ khi hover */
            }
    </style>
</head>
<body>
    <div class="background-container">
        <h1 class="title">Koi Breeding Games</h1>

        <!-- Hiển thị tên đăng nhập và các nút Nạp Tiền và Vào Game -->
        <div class="top-right-corner">
            <span class="username-display">Xin chào, @User.Identity.Name</span>
            <a href="@Url.Action("Naptien", "Donate")" class="button">Nạp Tiền</a> <!-- Chuyển hướng đến trang Nạp Tiền -->
            <a href="@Url.Action("Index", "Game")" class="button">Vào Game</a> <!-- Chuyển hướng đến Game -->
        </div>
    </div>
</body>
</html>
